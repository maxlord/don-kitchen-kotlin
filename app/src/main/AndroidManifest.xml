<manifest package="ru.ls.donkitchen"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:installLocation="preferExternal"
	>

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:name=".app.DonKitchenApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<meta-data
			android:name="io.fabric.ApiKey"
			android:value="815971861602959c6a68c194dda0bbe2ad87a15c"/>

		<meta-data
			android:name="com.google.android.gms.version"
			android:value="@integer/google_play_services_version"/>

		<activity
			android:name=".activity.splash.Splash"
			android:label="@string/app_name"
			android:screenOrientation="portrait"
			android:theme="@style/SplashTheme"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity
			android:name=".activity.categorylist.CategoryList"
			android:label="@string/app_name"
			/>

		<activity
			android:name=".activity.receiptlist.ReceiptList"
			android:label="@string/app_name"
			/>

		<activity
			android:name=".activity.receiptdetail.ReceiptDetail"
			android:label="@string/activity_receipt_detail_title"
			/>


		<service
			android:name=".fcm.ReceiptFirebaseMessagingService">
			<intent-filter>
				<action android:name="com.google.firebase.MESSAGING_EVENT"/>
			</intent-filter>
		</service>

		<service
			android:name=".fcm.ReceiptFirebaseInstanceIdService">
			<intent-filter>
				<action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
			</intent-filter>
		</service>

		<service android:name=".fcm.FcmRegistrationIntentService" />

	</application>

</manifest>
